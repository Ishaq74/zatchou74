---
interface Props {
  label: string;
}

const props: Props = Astro.props;
---

<button type="submit">{props.label}</button>

<style>
button {
  background-color: var(--secondary);
  border: 2px solid #000;
  padding: 12px;
  width: 100%;
  cursor: pointer;
  box-shadow: 3px 3px 0 #000;
  font-size: 16px;
  transition: all 0.3s;
}

button:hover {
  background-color: var(--secondaryLight);
  box-shadow: none;
}
</style>
