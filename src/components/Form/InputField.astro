---
  import type * as AstroModule from 'astro';
  // Remove the import for 'astro/htmltypes'
  interface Props {
    id: string;
    label: string;
    type: astroHTML.JSX.HTMLInputTypeAttribute;
    required: boolean;
  }
  
  const props: Props = Astro.props;
---

<div class="input-group">
  <label for={props.id}>{props.label}</label>

  
  <input type={props.type} id={props.id} name={props.id} required={props.required} />
</div>

<style>
.input-group {
  margin-bottom: 20px;
  text-align: left;
}

label {
  display: block;
  margin-bottom: 8px;
  font-size: 16px;
}

input {
  width: 100%;
  padding: 12px;
  border: 2px solid #000;
  box-shadow: 3px 3px 0 #000;
  font-size: 14px;
}
</style>
