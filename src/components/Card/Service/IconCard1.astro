---
import type { CollectionEntry } from 'astro:content';

type Props = {
    service: CollectionEntry<"services">;
};

const { service } = Astro.props;
const { description, title, icon } = service.data;

---
<li class="cs-item">
    <i class={icon}></i>
        <div class="cs-text-group">
                <h3 class="cs-h3">{title}</h3>
                <p class="cs-item-text">{description}</p>
        </div>
</li>

<style>

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
     .cs-item {
        list-style: none;
        max-width: 23rem;
        width: 100%;
        margin: 0;
        box-sizing: border-box;
        padding: 1rem;
        margin-right: auto;
        margin-left: auto;
        border: 1px solid #e8e8e8;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: left;
    }
     .cs-picture {
        width: 5rem;
        height: 5rem;
        margin-bottom: 1.25rem;
        box-sizing: border-box;
        /* prevents border from affecting height and width */
        background-color: #f7f7f7;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        /* prevents flexbox from squishing it */
        flex: none;
    }
     .cs-icon {
        width: 1.875rem;
        height: auto;
        display: block;
    }
     .cs-h3 {
        font-size: 1.25rem;
        line-height: 1.5em;
        margin: 0;
        margin-bottom: 0.5rem;
        color: var(--headerColor);
        text-align: center;
    }
     .cs-item-text {
        /* 14px - 16px */
        font-size: clamp(0.875rem, 1.5vw, 1rem);
        line-height: 1.5em;
        margin: 0;
        color: var(--bodyTextColor);
        text-align: center;
    }
}
/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
     .cs-item {
        margin: 0;
    }
}
/* Large Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
     .cs-item {
        max-width: none;
        padding: 2rem 1.5rem;
    }
}

